<Duel>:
	orientation: 'vertical'
	Controls:
		id: player1Controller
		size_hint_y: 0.15
	GameField:
		id: gameField
		size_hint_y: 0.7
	Controls:
		id: player2Controller
		size_hint_y: 0.15

<Sun>:
	canvas:
		Color:
			rgb: 1,1,0
		Ellipse:
			pos: self.center_x - 25,self.center_y - 25
			size: 50,50

