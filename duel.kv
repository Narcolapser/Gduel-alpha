<Ship>:
	canvas.before:
		PushMatrix
		Rotate:
			angle: root.angle
			axis: 0,0,1
			origin: root.center
	canvas:
		Color:
			rgb: self.color
		Line:
			points: self.center_x + 10, self.center_y, self.center_x - 10, self.center_y + 10, self.center_x - 10, self.center_y - 10, self.center_x + 10, self.center_y
			width: 3
	canvas.after:
		PopMatrix

<Torpedo>:
	canvas:
		Color:
			rgb: self.color
		Ellipse:
			pos: root.pos
			size: 7,7

<Controls>:
	Controller:
		id: controller
	GridLayout:
		cols: 3
		Button: 
			text: "FIRE"
			on_press: root.fire1()
		Button: 
			text: "FIRE"
			on_press: root.fire1()
		Button: 
			text: "FIRE"
			on_press: root.fire1()
		Button: 
			text: "X"
		Button: 
			text: "X"
		Button: 
			text: "X"
	BoxLayout:
		orientation: 'vertical'
		Button: 
			text: "Forward"
			on_press: root.forward()
			on_release: root.forward_release()
		Button: 
			text: "Reverse"
			on_press: root.reverse()
			on_release: root.reverse_release()

